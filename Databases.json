- ( Example Code 2, DB & Classes ):


<?php 

class Database {

 
 public $connection;
 

 public function __construct(){

  $dsn = "mysql:
  host=*Your_Host;
  port=*Your_Port;
  dbname=*Your_DB_name;
  user=*Your_Username;
  charset=*Your_CharSet;
  ";

  $this -> connection = new PDO($dsn);

 }
 // A Constructor, that creates an instance of the PDO, 
 // whenever a new instance of this class is created, 
 // a PDO instance is created on that instance 


 public function query($user_query){
  
  $statement = $this -> connection -> prepare($user_query);

  $statement->execute();


 return $statement

 }

}


 $db = new Database();

 $results = $db -> query("select * from posts") -> fetchAll( PDO::FETCH_ASSOC );


 foreach( $results as $data ){
  echo "<li>" . $data['*Key'] . "<li>";
 }


?>



